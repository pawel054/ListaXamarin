<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lista.AddPage"
             Title="Dodawanie">
    <ContentPage.Content>
        <StackLayout Padding="40">
            <Entry x:Name="entryTitle" Placeholder="Tytuł"/>
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="chckImportant"/>
                <Label Text="Ważny" VerticalOptions="Center"/>
            </StackLayout>
            <Button x:Name="addButton" Text="Dodaj" BackgroundColor="GreenYellow" Margin="20" Clicked="AddBtnClicked"/>
            <Button x:Name="editButton" Text="Edytuj" BackgroundColor="Aqua" Margin="20" IsVisible="False" Clicked="EditBtnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>