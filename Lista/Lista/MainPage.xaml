<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lista.MainPage"
             Title="ToDoList">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Center" Margin="0,15,0,0">
            <Button Text="Dodaj" BackgroundColor="GreenYellow"/>
            <Button Text="Edytuj" BackgroundColor="CadetBlue" Margin="20,0,20,0"/>
            <Button Text="Usuń" BackgroundColor="Red"/>
        </StackLayout>
        <ListView>
        </ListView>
    </Grid>

</ContentPage>
